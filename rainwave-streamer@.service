[Unit]
Description=Rainwave Streamer (station %i)
Wants=network.target
Requires=rainwave-backend.service
After=rainwave-backend.service

[Service]
Type=simple
User=rainwave
Group=rainwave
WorkingDirectory=/home/rainwave/streamer
ExecStart=/home/rainwave/.local/bin/uv run python src/main.py --sid %i
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
